pipeline {
  agent none
  stages {
    stage ('Cont1') {
      agent {
        docker.image('nginx').run('-p 8080:80')
      }
      steps {
        sh 'nginx -v'
      }
    }
    stage ('Cont2') {
      agent {
        docker { image 'ubuntu' }
      }
      steps {
        sh 'uname -a'
      }
    }
  }
}
